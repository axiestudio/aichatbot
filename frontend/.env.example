# Frontend Environment Variables

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Super Admin Configuration (Owner/Developer Access)
VITE_SUPER_ADMIN_USERNAME=stefan@axiestudio.se
VITE_SUPER_ADMIN_PASSWORD=STEfanjohn!12

# Development Settings
VITE_DEBUG=true
VITE_LOG_LEVEL=info

# Chat Configuration
VITE_DEFAULT_CONFIG_ID=default
VITE_MAX_MESSAGE_LENGTH=2000
VITE_TYPING_TIMEOUT=3000

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.pdf,.txt,.docx,.jpg,.jpeg,.png,.gif,.mp3,.wav
VITE_MAX_FILES_PER_UPLOAD=10

# WebSocket Configuration
VITE_WS_RECONNECT_INTERVAL=3000
VITE_WS_PING_INTERVAL=30000
VITE_WS_MAX_RECONNECT_ATTEMPTS=5

# Error Tracking
VITE_ENABLE_ERROR_REPORTING=true
VITE_SENTRY_DSN=

# Analytics (optional)
VITE_ANALYTICS_ENABLED=false
VITE_GOOGLE_ANALYTICS_ID=

# Feature Flags
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_VOICE_RECORDING=true
VITE_ENABLE_MESSAGE_REACTIONS=true
VITE_ENABLE_MESSAGE_REPLIES=true
VITE_ENABLE_SEARCH=true

# UI Configuration
VITE_THEME=light
VITE_PRIMARY_COLOR=#3b82f6
VITE_SECONDARY_COLOR=#e5e7eb
